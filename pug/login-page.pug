doctype html
html(lang='en')
  include inc/_head.pug
  body(style="background: url('img/city-image-a.jpg') no-repeat center center fixed;")
    .container-fluid.login-page-flexi
      .row
        .col-md-12.e-form-login
          img.logo(src='img/flexi-logo-800.png')
          p
            | You have been sent a code to access a digital form from 
            b Agents Name
          p
            | Please check your phone 
            b
              span#phoneSms
              | +64 027 599 0000
          .form-group
            input#smsCode.form-control(placeholder='Enter sms code')
          h5#textFail
            i.fas.fa-exclamation-circle 
            | Code Invalid Please Try Again
          p.didnt(style="font-weight: 600;") Didn't receive a code?
          button#notify.btn.btn-info.btn-notify(type='button') CLICK HERE TO NOTIFY YOUR AGENT
          button#login.btn.btn-secondary.btn-login(type='button') LOGIN
  include inc/_scripts.pug  
  script.
    window.onclick = showCodeFail;

    function showCodeFail() {
        $('#textFail').fadeTo("slow", 1);
    }
    
