function checkSignVendor() {
    var vName = $.trim($("#pv_name").val());
    var vEmail = $.trim($("#pv_email").val());
    
    if (vName == "" || vEmail == "") { return false; }

    var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/

    if (!vEmail.match(re) ) { return false;}
    return true;
}

