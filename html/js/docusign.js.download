    $.ajax({
        type: "GET",
        url: "/DigitalSigning/GetRecipentList/" + eformID,
        cache: false
    }).done(function (data) {
        isAjaxRequestTimeOut(data);

        if (data.status) {
            $("#docusignIntro").hide();
